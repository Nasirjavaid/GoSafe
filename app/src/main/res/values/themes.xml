<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoSafe" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_default_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>


        <item name="actionMenuTextColor">@color/app_default_color</item>
        <item name="android:actionMenuTextColor">@color/app_default_color</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_default_color</item>
        <item name="colorSecondaryVariant">@color/app_default_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.GoSafe.NoActionBar">
        <item name="actionMenuTextColor">@color/app_default_color</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>



    </style>

    <style name="Theme.GoSafe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/app_default_color</item>
    </style>

    <style name="Theme.GoSafe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="actionMenuTextColor">@color/app_default_color</item>

    </style>


    <style name="Theme.GoSafe.splashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="actionMenuTextColor">@color/app_default_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/app_default_color</item>
        <item name="colorPrimaryDark">@color/app_default_color</item>
        <item name="android:statusBarColor">@color/app_default_color</item>



    </style>




    <style name="NoActionBar">
        <item name="actionMenuTextColor">@color/app_default_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <style name="Theme.GoSafe.vehicletheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_default_color</item>
        <item name="title">Vehicles and Assets</item>
        <item name="android:textAlignment">center</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_default_color</item>
        <item name="colorSecondaryVariant">@color/app_default_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>




    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">

        <item name="android:textSize">13dp</item>
        <item name="iconSize">30dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">#FFffffff</item>


    </style>


    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/app_default_color</item>
        <item name="android:actionMenuTextColor">@color/app_default_color</item>
        <item name="android:text"></item>
    </style>



    <style name="barGrapButtons">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sub_heading_font_siz</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/pie_layout_top_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>



    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="icon">@drawable/moving_car</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="NavigationViewTheme" >
        <item name="android:listDivider">@color/app_default_color</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">17dp</item>


    </style>

</resources>