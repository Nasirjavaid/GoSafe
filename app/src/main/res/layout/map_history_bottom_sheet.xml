<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:id="@+id/bottom_sheet_dialog_for_map_control_send_out_put"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:weightSum="3"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:src="@drawable/go_safe_logo"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="History"
                android:textColor="@color/app_default_color"
                android:textFontWeight="900"
                android:textSize="22dp"></TextView>


        </LinearLayout>




        <TextView
            android:id="@+id/btn_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right"

            android:text="Cancel"
            android:textColor="@color/green"
            android:textSize="15dp"></TextView>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_map_history_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_view_eye_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="View Type"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2.5"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/simpleSpinnerViewType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"


                android:spinnerMode="dropdown"/>
<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1.0"-->
<!--                android:src="@drawable/map_nav_icon"-->
<!--                ></ImageView>-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->

            <!--                android:text="Send"-->
            <!--                android:textAllCaps="true"-->
            <!--                android:textSize="@dimen/sub_heading_font_siz"-->
            <!--                android:textColor="@color/green"-->
            <!--                ></TextView>-->


        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_period_type_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Type"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>







        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/simpleSpinnerPeriodType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"


                android:spinnerMode="dropdown"/>


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1.0"-->
<!--                android:src="@drawable/map_nav_icon"-->
<!--                ></ImageView>-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textAllCaps="true"-->
            <!--                android:text="Send"-->
            <!--                android:textSize="@dimen/sub_heading_font_siz"-->
            <!--                android:textColor="@color/green"-->
            <!--                ></TextView>-->


        </LinearLayout>

    </LinearLayout>





    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_start_date_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:backgroundTint="@color/transparent"

                android:hint="Select Start Date"
                android:inputType="date"

                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                android:textColorHint="@color/app_default_color"
                />







        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/map_nav_icon"
                ></ImageView>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_start_date_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:backgroundTint="@color/transparent"

                android:hint="Select End Date"
                android:inputType="date"

                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                android:textColorHint="@color/app_default_color"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/map_nav_icon"
                ></ImageView>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_speed_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Speed > 0 km"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <Switch
                android:id="@+id/speed_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_show_alarm_trace_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Show Alarm Trace"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <Switch
                android:id="@+id/show_alarm_trace_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_search_bottom"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="2"
            android:paddingHorizontal="8dp"
            android:text="Search"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:gravity="center"
            android:elevation="0dp"
            android:textColor="@color/green"
            android:layout_marginHorizontal="8dp"
            android:background="@color/white"/>

    </LinearLayout>


</LinearLayout>