<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:id="@+id/map_settings_bottom_sheet"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:weightSum="3"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:src="@drawable/go_safe_logo"
            ></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Reset Odometer ?"
                android:textColor="@color/app_default_color"
                android:textFontWeight="900"
                android:textSize="22dp"></TextView>


        </LinearLayout>




        <TextView
            android:id="@+id/btn_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:text="Cancel"
            android:textColor="@color/green"
            android:textSize="15dp"></TextView>
    </RelativeLayout>
    <RadioGroup android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_seyyings_chnage_apn"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="GPRS"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">



            <RadioButton
                android:id="@+id/radio_gprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->

            <!--                android:text="Send"-->
            <!--                android:textAllCaps="true"-->
            <!--                android:textSize="@dimen/sub_heading_font_siz"-->
            <!--                android:textColor="@color/green"-->
            <!--                ></TextView>-->


        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/map_pin_location_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="GPS"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                ></TextView>







        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">



            <RadioButton
                android:id="@+id/radio_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

              />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textAllCaps="true"-->
            <!--                android:text="Send"-->
            <!--                android:textSize="@dimen/sub_heading_font_siz"-->
            <!--                android:textColor="@color/green"-->
            <!--                ></TextView>-->


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/semiGray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0.5dp"></View>
    </RadioGroup>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_cancel_bottom"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:gravity="center"
            android:elevation="0dp"
            android:textColor="@color/app_default_color"
            android:layout_marginHorizontal="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/btn_send_bottom"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:text="Send"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:gravity="center"
            android:elevation="0dp"
            android:textColor="@color/green"
            android:layout_marginHorizontal="8dp"
            android:background="@color/white"/>

    </LinearLayout>


</LinearLayout>