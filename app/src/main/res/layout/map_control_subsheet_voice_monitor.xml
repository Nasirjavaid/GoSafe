<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:id="@+id/bottom_sheet_dialog_for_map_control_send_out_put"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:weightSum="3"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:src="@drawable/go_safe_logo"
            ></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Voice Monitor"
                android:textColor="@color/app_default_color"
                android:textFontWeight="900"
                android:textSize="22dp"></TextView>


        </LinearLayout>




        <TextView
            android:id="@+id/btn_cancel_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:text="Cancel"
            android:textColor="@color/green"
            android:textSize="15dp"></TextView>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:padding="3dp"

        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:src="@drawable/cell_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">



            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Title(max:20)"-->
            <!--                android:textSize="@dimen/bottom_sheet_headings"-->
            <!--                android:textColor="@color/app_default_color"-->
            <!--                ></TextView>-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:backgroundTint="@color/transparent"

                android:hint="Phone#"
                android:inputType="number"

                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="0dp"
                android:textSize="@dimen/bottom_sheet_headings"
                android:textColor="@color/app_default_color"
                android:textColorHint="@color/app_default_color"
                />







        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical">


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1.0"-->
<!--                android:src="@drawable/map_nav_icon"-->
<!--                ></ImageView>-->


            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textAllCaps="true"-->
            <!--                android:text="Send"-->
            <!--                android:textSize="@dimen/sub_heading_font_siz"-->
            <!--                android:textColor="@color/green"-->
            <!--                ></TextView>-->


        </LinearLayout>

    </LinearLayout>




















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_cancel_bottom"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:gravity="center"
            android:elevation="0dp"
            android:textColor="@color/app_default_color"
            android:layout_marginHorizontal="8dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/btn_send_bottom"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:text="Send"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:gravity="center"
            android:elevation="0dp"
            android:textColor="@color/green"
            android:layout_marginHorizontal="8dp"
            android:background="@color/white"/>

    </LinearLayout>


</LinearLayout>