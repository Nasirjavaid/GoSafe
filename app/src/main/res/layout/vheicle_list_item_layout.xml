<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:contentPadding="12dp"
            android:elevation="0dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/green"
            app:cardCornerRadius="8dp"
            android:translationY="12.5dp"
            android:translationZ="90dp"
            android:translationX="-6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/pie_center_icon_width"
                android:layout_height="@dimen/pie_center_icon_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_car_icon_for_item_list"
                android:translationZ="90dp"></ImageView>

        </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:translationX="10dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="9dp"
        android:elevation="12dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:translationX="50dp"
            android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicles"
                    android:textColor="@color/app_default_color"
                    android:textSize="@dimen/headin_font_size"

                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:text="Click here to open vehicles list"
                    android:textSize="@dimen/sub_heading_font_siz"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Click here to open vehicles list"
                    android:textSize="@dimen/sub_heading_font_siz"
                    ></TextView>

            </LinearLayout>


        </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>